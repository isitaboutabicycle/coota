<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bluuire_an_fhocloora"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentBottom="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <EditText
        android:id="@+id/cuardaigh"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="DÃ©an cuardach..."
        android:inputType="text">
        <requestFocus/>
    </EditText>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/foclooir"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/cuardaigh"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_weight="1"
        tools:listitem="@layout/iontraail_feein"
        app:fastScrollEnabled="true"
        app:fastScrollVerticalThumbDrawable="@drawable/thumb_drawable"
        app:fastScrollVerticalTrackDrawable="@drawable/line_drawable"
        app:fastScrollHorizontalThumbDrawable="@drawable/thumb_drawable"
        app:fastScrollHorizontalTrackDrawable="@drawable/line_drawable"
        android:scrollbars="horizontal"
        android:scrollbarThumbVertical="@color/colorPrimaryDark"
        android:scrollbarSize="10dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_randamach_dubh_24dp" />

</android.support.constraint.ConstraintLayout>